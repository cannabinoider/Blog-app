<head>
    <link rel="stylesheet" href="styles.css">
</head>

<%- include("header.ejs") %>

<section class="hero">
    <div class="hero-content">
        <h1>Welcome to My Blog</h1>
        <p>Share your thoughts and ideas with the world.</p>
        <a href="/new" class="btn">Create New Post</a>
    </div>
</section>

<section class="posts">
    <div class="container">
        <h2>Recent Posts</h2>

        <% if (posts.length === 0) { %>
            <p class="no-posts">No posts yet. Start by creating one!</p>
        <% } else { %>
            <% posts.forEach((post) => { %>
                <div class="post">
                    <h3><%= post.title %></h3>
                    <p><%= post.content %></p>
                    <a href="/edit/<%= post.id %>" class="edit-button">Edit</a>

                </div>
            <% }) %>
        <% } %>
    </div>
</section>

<%- include("footer.ejs") %>
