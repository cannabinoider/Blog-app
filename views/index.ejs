<head>
    <link rel="stylesheet" href="styles.css">
</head>
<%- include("header") %>

<div class="container">
  <h1>All Blog Posts</h1>

  <a href="/new" class="btn btn-create">Create New Post</a>

  <% if (posts.length === 0) { %>
    <p class="no-posts">No posts available. Start by creating one!</p>
  <% } else { %>
    <% posts.forEach((post) => { %>
      <div class="card">
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <div class="btn-group">
          <a href="/edit/<%= post.id %>" class="btn btn-edit">Edit</a>
          <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn btn-delete">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  <% } %>
</div>

<%- include("footer") %>
